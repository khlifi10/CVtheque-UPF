{% extends 'base.html.twig' %}

{% block title %}Experience index{% endblock %}

{% block body %}
    <h1>Experience index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IdExperience</th>
                <th>NomEntreprise</th>
                <th>PosteOccupe</th>
                <th>TacheRealise</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for experience in experiences %}
            <tr>
                <td>{{ experience.id }}</td>
                <td>{{ experience.IdExperience }}</td>
                <td>{{ experience.NomEntreprise }}</td>
                <td>{{ experience.PosteOccupe }}</td>
                <td>{{ experience.TacheRealise }}</td>
                <td>{{ experience.DateDebut ? experience.DateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ experience.DateFin ? experience.DateFin|date('Y-m-d') : '' }}</td>
                <td>{{ experience.Ville }}</td>
                <td>{{ experience.Pays }}</td>
                <td>
                    <a href="{{ path('experience_show', {'id': experience.id}) }}">show</a>
                    <a href="{{ path('experience_edit', {'id': experience.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('experience_new') }}">Create new</a>
{% endblock %}
